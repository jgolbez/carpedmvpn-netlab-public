{
  "name": "Network Training Lab Environment",
  
  // Use the official containerlab devcontainer image that includes everything
  "image": "ghcr.io/srl-labs/containerlab/devcontainer-dind:latest",
  
  // CRITICAL: Must have --privileged for Docker-in-Docker to work properly
  "runArgs": ["--privileged"],
  
  // Machine requirements for Codespaces
  "hostRequirements": {
    "cpus": 2,
    "memory": "8gb", 
    "storage": "32gb"
  },
  
  // VS Code customizations
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "redhat.vscode-yaml"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  
  // Run additional setup after container creation
  "postCreateCommand": "bash .devcontainer/setup.sh",
  
  // Forward ports for web services
  "forwardPorts": [8080, 8081, 8082],
  "portsAttributes": {
    "8080": {"label": "HAProxy Stats"},
    "8081": {"label": "Web Service 1"},
    "8082": {"label": "Web Service 2"}
  }
}
